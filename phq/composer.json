{
    "name": "quenti77/phq",
    "version": "v0.5.7",
    "description": "A very simple PHP MVC Framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Quentin",
            "email": "quentin.ysambert@gmail.com",
            "homepage": "https://doc.easyweb-quality.fr",
            "role": "Developper"
        }
    ],
    "scripts": {
      "post-autoload-dump": "@php bin/composer.php",
